<configuration>

  <!-- Console appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Hibernate SQL logger -->
  <logger name="org.hibernate.SQL" level="DEBUG" />

  <!-- Root logger -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>
  
  <!-- Set log level to DEBUG for specific packages -->
  <logger name="com.smapi.controllers" level="DEBUG" />
  <logger name="com.smapi.services" level="DEBUG" />

</configuration>
